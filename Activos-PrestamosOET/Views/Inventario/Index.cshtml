
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style type="text/css">
        .paging-nav {
            text-align: right;
            padding-top: 2px;
        }

            .paging-nav a {
                margin: auto 1px;
                text-decoration: none;
                display: inline-block;
                padding: 1px 7px;
                background: #ff9966;
                color: white;
                border-radius: 3px;
            }

            .paging-nav .selected-page {
                background: #f26631;
                font-weight: bold;
            }

        .paging-nav,
        #tableData {
            margin: 0 auto;
            font-family: Arial, sans-serif;
        }
    </style>

    <meta charset="utf-8">
    <title>Inventario</title>
    <!-- Js -->
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("[id$=A6]").addClass("active");
        });
    </script>

    <script>
      $(function() {
        $( "#datepicker" ).datepicker();
      });
    </script>
    <script>
         $.datepicker.regional['es'] = {
         closeText: 'Cerrar',
         prevText: '<Ant',
         nextText: 'Sig>',
         currentText: 'Hoy',
         monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
         monthNamesShort: ['Ene','Feb','Mar','Abr', 'May','Jun','Jul','Ago','Sep', 'Oct','Nov','Dic'],
         dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
         dayNamesShort: ['Dom','Lun','Mar','Mié','Juv','Vie','Sáb'],
         dayNamesMin: ['Do','Lu','Ma','Mi','Ju','Vi','Sá'],
         weekHeader: 'Sm',
         dateFormat: 'dd/mm/yy',
         firstDay: 1,
         isRTL: false,
         showMonthAfterYear: false,
         yearSuffix: ''
         };

         $.datepicker.setDefaults($.datepicker.regional['es']);
         $(function() {
            $( "#datepicker1" ).datepicker();
         });
    </script>


    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/paging.js"></script>
    <script type="text/javascript">
            $(document).ready(function() {
                $('#tableData').paging({limit:5});
            });
    </script>

</head>
<body>
    <!--TÍTULO-->
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-10">
            <h1>Inventario</h1>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        Activos_PrestamosOET.Models.PrestamosEntities db = new Activos_PrestamosOET.Models.PrestamosEntities();
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
        {
            Text = "Todas",
            Value = "1",
            Selected = true
        });
        foreach (Activos_PrestamosOET.Models.TIPOS_ACTIVOS tipos in db.TIPOS_ACTIVOS)
        {
            listItems.Add(new SelectListItem
            {
                Text = tipos.NOMBRE,
                Value = tipos.NOMBRE
            });
        }
        ViewBag.listItems = listItems;
        <!--CATEGORÍA-->
        <div class="row">
            <div class="form-horizontal">
                <div class="col-md-1">
                </div>
                <div class="col-md-8">
                    <label class="col-md-2">Categoria</label>
                    <div class="col-md-4">
                        @Html.DropDownList("dropdownCategoria", listItems, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        <input name="submit" id="submit" type="submit" value="Buscar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <!--TABLA-->
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-8">
                <table id ="tableData" class="table" style="margin-top:20px">
                    <thead>
                        <tr>
                            <th>Fabricante</th>
                            <th>Modelo</th>
                            <th>Número Serie</th>
                            <th>Tipo</th>
                            <th>Prestado A</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (List<String> s in ViewBag.Courses)
                        {
                            <tr>
                                @foreach (String hilera in s)
                                {
                                    <td>@hilera</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <br>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-1">
            </div>
            <div class="col-md-8">
                <label class="col-md-2">Fecha inicial:</label>
                <div class="col-md-4">
                    <input name ="datepicker" class="form-control" style="padding:10px" type="text" id="datepicker" />
                    <br>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-8">
            <label class="col-md-2">Fecha finalización:</label>
            <div class="col-md-4">
                <input name="datepicker1" class="form-control" style="padding:10px" type="text" id="datepicker1" />
                <br>
            </div>
            <div class="col-md-3">
                <input type="submit"name="submit" id="process" value="Buscar por fechas" class="btn btn-default" />
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-8">
            <table class="table" style="width:200px; margin-top:20px">
                <thead>
                    <tr>
                        <th class="col-md-2">Categoría</th>
                        <th class="col-md-2">Cantidad</th>
                    </tr>
                </thead>
                <tbody>              
                    @if (ViewBag.Courses1 != null)
                    {
                        foreach (List<String> s in ViewBag.Courses1)
                        {
                            <tr>
                                @foreach (String hilera in s)
                                {
                                    <td class="col-md-2">@hilera</td>
                                }
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>
}
    

    
</body>



