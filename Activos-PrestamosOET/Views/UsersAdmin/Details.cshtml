@model Activos_PrestamosOET.Models.ApplicationUser
@{
    ViewBag.Title = "Detalles de usuario";
}
<div class="row">
    <div class="col-xs-12">
        <br />
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Regresar", "Index")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-5 col-sm-offset-1">
        <div class="row">
            <div class="col-xs-12">
                <h4>Datos personales</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                @Html.LabelFor(model => model.FullName)
            </div>
            <div class="col-xs-8">
                <p>@Html.DisplayFor(model => model.FullName)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="col-xs-8">
                <p>@Html.DisplayFor(model => model.Email)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                @Html.LabelFor(model => model.Cedula)
            </div>
            <div class="col-xs-8">
                <p>@Html.DisplayFor(model => model.Cedula)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label class="control-label" for="estacion">Estación</label>
            </div>
            <div class="col-xs-8">
                <p id="estacion">@ViewBag.Estacion</p>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-5">
        <div class="row">
            <div class="col-xs-12">
                <h4>Roles asignados</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @if (ViewBag.RoleNames.Count == 0)
                {
                    <p>No se le han asignado roles al usuario</p>
                }
                else
                {
                    <ul>
                        @foreach (var item in ViewBag.RoleNames)
                {
                            <li>
                                <p>@item</p>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
