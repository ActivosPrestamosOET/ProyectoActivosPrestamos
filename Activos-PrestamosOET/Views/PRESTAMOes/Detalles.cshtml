@model Activos_PrestamosOET.Models.PRESTAMO

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de la Solicitud</h2>

<hr />


<div class="container">
    <div class="row">


        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.NUMERO_BOLETA):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.NUMERO_BOLETA)
        </div>
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.FECHA_SOLICITUD):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.FECHA_SOLICITUD.Date)
        </div>

        <br />
        <br />
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">Solicitante:</label>
        </div>
        <div class="col-md-4">
            @ViewBag.Nombre
            <!--ViewBag.Nombre-->
        </div>
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.FECHA_RETIRO):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.FECHA_RETIRO)
        </div>
        <br />
        <br />
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.MOTIVO):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.MOTIVO)
        </div>
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.PERIODO_USO):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.PERIODO_USO)
        </div>
        <br />
        <br />
        <div class="col-md-2">
            <label class="control-label" for="inputDefault">@Html.DisplayNameFor(model => model.SIGLA_CURSO):</label>
        </div>
        <div class="col-md-4">
            @Html.DisplayFor(model => model.SIGLA_CURSO)
        </div>
        <br />
        <br />
    </div>
</div>
<br />
<br />
<table class="table" style="margin-top:20px">
    <thead>
        <tr>
            <th>
                Equipo
            </th>

            <th>
                Cantidad Solicitada
            </th>
            <th>
                Cantidad Aprovada
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<br />
<br />
<div class="form-group">
    <label class="col-lg-2 control-label" for="inputDefault">@Html.DisplayNameFor(model => model.SOFTWARE_REQUERIDO):</label>
    <div class="col-lg-10">
        @Html.DisplayFor(model => model.SOFTWARE_REQUERIDO)
    </div>
</div>
<br />
<br />
<div class="form-group">
    <label class="col-lg-2 control-label" for="inputDefault">@Html.DisplayNameFor(model => model.OBSERVACIONES_SOLICITANTE):</label>
    <div class="col-lg-10">
        @Html.DisplayFor(model => model.OBSERVACIONES_SOLICITANTE)
    </div>
</div>
<br />
<br />

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @if (Model.FECHA_RETIRO >= System.DateTimeOffset.Now.Date)
        {

            @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-default" })
            @Html.ActionLink("Cancelar solicitud", "Delete", new { id = Model.ID }, new { @class = "btn btn-default" })

        }
        else if (Model.Estado == 6)
        {
            <p>Esta solicitud ya no puede ser editada debido a que esta cancelada.</p>
        }
        else
        {
            <p>Esta solicitud ya no puede ser editada ni cancelada.</p>
        }
    </div>
</div>

<div class="form-group">
    <dl class="dl-horizontal">
        <div>
            <p>
                @Html.ActionLink("Volver al Historial", "Historial")
            </p>
        </div>
</div>
