@using Microsoft.AspNet.Identity.EntityFramework
@model IdentityRole
@{
    ViewBag.Title = "Borrar rol";
}
<div class="row">
    <div class="col-xs-12">
        <br/>
        @Html.ActionLink("Regresar", "Index")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h2>@ViewBag.Title</h2>

        <h4>¿Esta seguro que desea borrar este rol? </h4>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="row">
            <div class="col-xs-2">
                <label for="nombre" class="control-label">Nombre</label>
            </div>
            <div class="col-xs-10">
                <p id="nombre">@Html.DisplayFor(model => model.Name)</p>
            </div>
            <div class="col-xs-12">
                <p class="text-info">Borrar el rol también se lo borrará a todos los usuarios. No borrará a los usuarios en sí.</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="pull-right">
                <div class="form-group">

                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Borrar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

